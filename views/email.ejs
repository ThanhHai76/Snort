<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/head') %>
    <style>
        .my-custom-scrollbar {
            height: 180px;
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top bg-dark">

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <a class="navbar-brand" href="#"><img src="./img/snort.png" height="40" width="80" alt=""></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse"
                    data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/event">Event</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/signature">Signature</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" href="/email">Email</a>
                    </li>
                </ul>
                <div class="text-light my-2 my-lg-0 mr-5">
                    <h4>Monitoring Snort</h4>
                </div>
            </div>
        </nav>
    </header>
    <main>
        <div class="container mt-3">
            <div class="mb-3">
                <h1>Receive Snort Alert via Email/Phone</h1>
            </div>
            <div class="mb-3">
                <h3 class="mb-3">Current Email :</h3>

                <div class="table-wrapper-scroll-y my-custom-scrollbar mt-2">
                    <table class="table table-bordered table-striped mb-0">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for (var i = 0; i < data.length; i++) { %>
                            <tr>
                                <td><%= i + 1 %></td>
                                <td><%= data[i].name %> </td>
                                <td><%= data[i].email %> </td>
                                <td><%= data[i].phone %> </td>
                            </tr>
                            <% }; %>
                        </tbody>

                    </table>
                </div>

            </div>
            <div class="mb-5">
                <h3>Register New Email :</h3>
                <form action="/submit" method="POST">
                    <div class="form-group">
                        <label for="validationDefault01">Name</label>
                        <input type="text" class="form-control" name="name" id="validationDefault01" value="" required>
                    </div>
                    <div class="form-group">
                        <label for="validationDefault02">Email</label>
                        <input type="text" class="form-control" name="email" id="validationDefault02" value="" required>
                    </div>
                    <div class="form-group">
                        <label for="validationDefault02">Phone number</label>
                        <input type="text" class="form-control" name="phone" id="validationDefault02" value="" required>
                    </div>
                    <button class="btn btn-primary" type="submit">Submit form</button>
                </form>
            </div>

        </div>

    </main>

    <script src="./js/snort.js"></script>
</body>

</html>